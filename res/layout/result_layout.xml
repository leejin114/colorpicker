<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" 
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow>        
	    <TextView android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" android:id="@+id/TextViewHumanReadable" android:text="@string/result_color_name"></TextView>
    </TableRow>
    <TableRow>
        <LinearLayout android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:id="@+id/LinearLayoutColor">
                
        
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ImageViewColor" android:maxHeight="24px" android:maxWidth="24px" android:minHeight="24px" android:minWidth="24px" android:tint="#ff0000"></ImageView>
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LinearLayoutData" android:orientation="vertical">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewRal" android:text="@string/result_color_ral"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewRgb" android:text="@string/result_color_rgb"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewHex" android:text="@string/result_color_hex"></TextView>
</LinearLayout>
</LinearLayout>	    
    </TableRow>

</TableLayout>
